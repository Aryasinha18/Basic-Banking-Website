.collapsible {
  background-color: #777;
  color: white;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
  margin-right: 150px;
}

.active, .collapsible:hover {
  background-color: #555;
}

.content {
  padding: 0 18px;
  margin-top: 20px;
  display: none;
  overflow: hidden;
  background-color: #f1f1f1;
}

.white{
  color: white;
}

body {
  margin-top: 0px;
 margin-bottom: 50px;
 margin-right: 50px;
 margin-left: 50px;
 background-image: url('https://cdn.wallpapersafari.com/93/56/nlz0kt.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;

  }
</style>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <img class = "navbar-brand" src="images/bank-logo.png" alt="logo">
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li ><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li class="active"><a href="/view">View</a></li>
          <li><a href="/money-transfer">Transfer</a></li>
          <li><a href="/history">Transaction History</a></li>
        </ul>
      </div>
    </div>
  </nav>
<h1 class="text-center white ">Welcome to Our Bank</h1>

<figure class="text-center">
   <br>
  <h4><p class = "white"> Everyday is a bank account, and time is our currency</p></h4>
  <figcaption class="blockquote-footer white h5">
    Christopher Rice
  </figcaption>
</figure>

<div class="pt-4 pb-4 pl-4 pr-4">
  <span class="border border-5">
    <table class="table table-success table-striped">
      <thead>
        <tr>
          <th scope="col" class = "white"><h3>
            Customer Details
            <small class="text-muted h6 white">Click to expand</small>
          </h3></th>
        </tr>
      </thead>
      <%  newPeople.forEach(function(item){ %>
        <tbody>
          <tr>
            <td>
            <button type="button" class="collapsible"> <%= item.name %> </button>
            <div class="content">
              <p>
                E-mail:-<%= item.email %> <br>
                Balance:-<%= item.currentBalance %><br>
              </p>
            </div>

           </td>
           </tr>
          </tbody>
      <%  })  %>
    </table>
    </span>
   </div>

<br>
<br>

<script>
var coll = document.getElementsByClassName("collapsible");
var i;

for (i = 0; i < coll.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content = this.nextElementSibling;
    if (content.style.display === "block") {
      content.style.display = "none";
    } else {
      content.style.display = "block";
    }
  });
}
</script>


</body>
